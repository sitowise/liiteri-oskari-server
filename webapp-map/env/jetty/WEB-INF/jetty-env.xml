<Configure class="org.eclipse.jetty.webapp.WebAppContext">
    <New id="oskaridb" class="org.eclipse.jetty.plus.jndi.EnvEntry">
        <Arg>jdbc/OskariPool</Arg>
        <Arg>
            <New class="org.apache.commons.dbcp.BasicDataSource">
                <Set name="driverClassName">org.postgresql.Driver</Set>
                <Set name="url">jdbc:postgresql://localhost:5432/oskaridb</Set>
                <Set name="username">oskari</Set>
                <Set name="password">oskari</Set>
            </New>
        </Arg>
    </New>
    <New id="myplacesdb" class="org.eclipse.jetty.plus.jndi.EnvEntry">
        <Arg>jdbc/omat_paikatPool</Arg>
        <Arg>
            <New class="org.apache.commons.dbcp.BasicDataSource">
                <Set name="driverClassName">org.postgresql.Driver</Set>
                <Set name="url">jdbc:postgresql://localhost:5432/oskaridb</Set>
                <Set name="username">oskari</Set>
                <Set name="password">oskari</Set>
            </New>
        </Arg>
    </New>
    <New id="analysisdb" class="org.eclipse.jetty.plus.jndi.EnvEntry">
        <Arg>jdbc/analysisPool</Arg>
        <Arg>
            <New class="org.apache.commons.dbcp.BasicDataSource">
                <Set name="driverClassName">org.postgresql.Driver</Set>
                <Set name="url">jdbc:postgresql://localhost:5432/oskaridb</Set>
                <Set name="username">oskari</Set>
                <Set name="password">oskari</Set>
            </New>
        </Arg>
    </New>
    <New id="userlayerdb" class="org.eclipse.jetty.plus.jndi.EnvEntry">
        <Arg>jdbc/userlayerPool</Arg>
        <Arg>
            <New class="org.apache.commons.dbcp.BasicDataSource">
                <Set name="driverClassName">org.postgresql.Driver</Set>
                <Set name="url">jdbc:postgresql://localhost:5432/oskaridb</Set>
                <Set name="username">oskari</Set>
                <Set name="password">oskari</Set>
            </New>
        </Arg>
    </New>
    <Set name="securityHandler">
        <New class="org.eclipse.jetty.security.ConstraintSecurityHandler">
            <Set name="loginService">
                <!-- For jetty 9 remove the .plus. from JAASLoginService -->
                <New class="org.eclipse.jetty.plus.jaas.JAASLoginService">
                    <Set name="name">OskariRealm</Set>
                    <Set name="loginModuleName">oskariLoginModule</Set>
                </New>
            </Set>
        </New>
    </Set>
</Configure>